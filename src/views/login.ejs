<%- include('includes/header') %>

<link rel="stylesheet" type="text/css" href="/css/login.css" />

<body>
  <!-- Fullscreen background video -->
  <video autoplay muted loop playsinline class="background-video">
    <source src="/img/hotel-video.mp4" type="video/mp4" />
    Your browser does not support the video tag.
  </video>

  <!-- Login form -->
  <form class="login-container" action="/admin/login" METHOD="POST">
    <div class="login-wrapper">
      <div class="login-top">
        <span>Login</span>
        <div>Go back <a href="/admin">Home</a></div>
        <p>
          Not registered yet?
          <a href="/admin/signup">Signup</a>
        </p>
      </div>
      <div class="login-input-frame">
        <div class="login-input-container">
          <label>Store *</label>
          <input
            type="text"
            name="memberNick"
            placeholder="Username"
            required
          />
        </div>
        <div class="login-input-container">
          <label>Password *</label>
          <input
            type="password"
            name="memberPassword"
            placeholder="Password"
            required
          />
        </div>
      </div>
      <button class="login-button" name="login" type="submit">Login</button>
    </div>
  </form>

  <script type="text/javascript" src="/js/login.js"></script>
</body>

<%- include('includes/footer') %>
